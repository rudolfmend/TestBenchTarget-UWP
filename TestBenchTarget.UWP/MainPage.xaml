<Page
    x:Class="TestBenchTarget.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TestBenchTarget.UWP.Models"
    xmlns:local="using:TestBenchTarget.UWP"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <DataTemplate x:Key="ItemTemplate" x:DataType="models:DataItem">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding DateColumnValue, Converter={StaticResource DateConverter}}" 
                   Style="{StaticResource CellTextBlockStyle}"
                   Grid.Column="0"/>
                <TextBlock Text="{Binding ProcedureColumnValue}" 
                   Style="{StaticResource CellTextBlockStyle}"
                   Grid.Column="1"/>
                <TextBlock Text="{Binding PointsColumnValue}" 
                   Style="{StaticResource CellTextBlockStyle}"
                   Grid.Column="2"/>
                <TextBlock Text="{Binding DelegateColumnValue}" 
                   Style="{StaticResource CellTextBlockStyle}"
                   Grid.Column="3"/>
            </Grid>
        </DataTemplate>
        
        <local:DateFormatConverter x:Key="DateConverter"/>

        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <Style x:Key="CellTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="5" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Page.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Hlavička -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <TextBlock Text="TestBench Target - " FontSize="24" VerticalAlignment="Center"/>
            <TextBlock x:Name="TimeDisplay" FontSize="24" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Hlavná tabuľka -->
        <ListView x:Name="MainListView"
                  Grid.Row="1" Grid.Column="0" 
                  Margin="0,0,20,0">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Date" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="0"/>
                        <TextBlock Text="Procedure" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1"/>
                        <TextBlock Text="Points" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="2"/>
                        <TextBlock Text="Delegate" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="3"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
        </ListView>

        <!-- Pravý panel s ovládaním -->
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                    Width="280" 
                    HorizontalAlignment="Right">

            <!-- Formulárové polia -->
            <TextBlock Text="Date" Margin="0,20,0,5"/>
            <DatePicker x:Name="DateSelector" 
                        HorizontalAlignment="Stretch"/>

            <TextBlock Text="Procedure" Margin="0,20,0,5"/>
            <TextBox x:Name="ProcedureInput"
                     PlaceholderText="Enter procedure"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Points" Margin="0,10,0,5"/>
            <TextBox x:Name="PointsInput"
                     PlaceholderText="0"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Delegate" Margin="0,10,0,5"/>
            <TextBox x:Name="DelegateInput"
                     PlaceholderText="Enter delegate"
                     Margin="0,0,0,10"/>

            <!-- Tlačidlá -->
            <Button x:Name="AddButton" 
                    Content="Add to table" 
                    HorizontalAlignment="Stretch"
                    Margin="0,20,0,10"/>

            <Button x:Name="LoadButton"
                    Content="Load data" 
                    HorizontalAlignment="Stretch"
                    Margin="0,10,0,10"/>

            <Button x:Name="SaveButton"
                    Content="Save data to file" 
                    HorizontalAlignment="Stretch"
                    Margin="0,10,0,10"/>

            <Button x:Name="DeleteButton"
                    Content="Delete data" 
                    HorizontalAlignment="Stretch"
                    Margin="0,10,0,10"/>

            <Button x:Name="OpenFolderButton"
                    Content="Open folder" 
                    HorizontalAlignment="Stretch"
                    Margin="0,10,0,10"/>
        </StackPanel>
    </Grid>
</Page>