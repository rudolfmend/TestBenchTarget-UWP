<Page
    x:Class="TestBenchTarget.UWP.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Horný panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="TestBench Target - " FontSize="24" VerticalAlignment="Center"/>
            <TextBlock x:Name="TimeDisplay" FontSize="24" VerticalAlignment="Center" Text="00:00:00"/>
        </StackPanel>

        <!-- Stredná časť -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="DateDisplay" Text="00.00.0000" 
                       FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        </StackPanel>

        <!-- Tlačidlo na spustenie aplikácie -->
        <Button Grid.Row="2" x:Name="OpenAppButton" 
                Content="Open Application" 
                Click="OpenAppButton_Click"
                HorizontalAlignment="Stretch"
                Height="100" 
                FontSize="20"/>

        <!-- Menu -->
        <CommandBar Grid.Row="0" HorizontalAlignment="Right" 
                    Background="Transparent" IsOpen="False" 
                    DefaultLabelPosition="Right">
            <AppBarButton Icon="Help" Label="Help">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="About" Click="AboutMenuItem_Click"/>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
        </CommandBar>
    </Grid>
</Page>